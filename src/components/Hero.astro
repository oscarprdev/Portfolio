---
import GithubIcon from '../icons/GithubIcon.astro';
import LinkedinIcon from '../icons/LinkedinIcon.astro';
import { getI18N } from '../i18n';
import Link from './Link.astro';
import CvIcon from '../icons/CvIcon.astro';
import ContainerHoverAnimation from './ContainerHoverAnimation.astro';
import { ContainerSize } from '../types';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="hero">
	<div class="hero-title">
		<h1>{i18n.HERO.TITLE.NAME}</h1>
	</div>
	<div class="hero-title">
		<h1>{i18n.HERO.TITLE.POSITION}</h1>
	</div>
	<p class="hero-text">
		{i18n.HERO.TEXT}
		<a class="company-link" href={i18n.HERO.COMPANY.URL} target="blank">{i18n.HERO.COMPANY.NAME}</a>
	</p>
	<div class="hero-info">
		<div class="hero-links">
			<p class="email">
				{i18n.HERO.LINKS.EMAIL}
			</p>
			<ContainerHoverAnimation size={ContainerSize.sm}>
				<Link href={i18n.HERO.LINKS.GITHUB}><GithubIcon /></Link>
			</ContainerHoverAnimation>
			<ContainerHoverAnimation size={ContainerSize.sm}>
				<Link href={i18n.HERO.LINKS.LINKEDIN}><LinkedinIcon /></Link>
			</ContainerHoverAnimation>
			<ContainerHoverAnimation size={ContainerSize.sm}>
				<Link href={i18n.HERO.LINKS.CV}><CvIcon /></Link>
			</ContainerHoverAnimation>
		</div>
		<picture>
			<img
				src="https://pub-40348015f8234717ad672ff274c3fc81.r2.dev/personal-image.webp"
				alt="personal image"
				width="800"
				height="800"
			/>
		</picture>
	</div>
</section>

<style>
	.hero {
		width: 95vw;
		max-width: 1100px;
		height: 100dvh;

		.hero-title {
			overflow: hidden;
			margin-top: 20px;

			h1 {
				text-transform: uppercase;
				font-size: clamp(2rem, 5rem, 7rem);
				line-height: 0em;
				margin: 32px 0;

				animation: fade-up 0.4s cubic-bezier(0.2, 0.82, 0.72, 0.85);
			}
		}

		.hero-text {
			font-weight: 500;
			font-size: clamp(15px, 3rem, 30px);
			width: 750px;

			opacity: 0;

			animation: appearing 0.5s ease-out forwards;
			animation-delay: 0.3s;
		}

		.company-link:hover {
			color: var(--accent-secondary);
			transition-duration: 0.2s;
		}

		.hero-info {
			width: 100%;
			display: flex;
			align-items: start;
			justify-content: space-between;

			.hero-links {
				display: flex;
				align-items: center;
				justify-content: start;
				gap: 1rem;

				opacity: 0;

				animation: fade-up-light 0.6s cubic-bezier(0.2, 0.82, 0.72, 0.85) forwards;
				animation-delay: 0.5s;

				.email {
					border-radius: 2rem;
					padding: 0.8rem 2rem;
					border: 1px solid;
				}
			}

			picture {
				overflow: hidden;
				border-radius: 1.5rem;
				border: 1px solid;
				padding: 0.3rem;

				display: grid;
				place-items: center;

				width: 15rem;

				opacity: 0;

				animation: fade-up-light 0.5s cubic-bezier(0.2, 0.82, 0.72, 0.85) forwards;
				animation-delay: 0.5s;
			}

			img {
				object-fit: cover;
				width: 100%;
				height: 100%;
				border-radius: 1.2rem;
			}
		}
	}

	@keyframes fade-up {
		from {
			transform: translateY(60px);
			opacity: 0;
		}
		to {
			transform: translateY(0px);
			opacity: 1;
		}
	}

	@keyframes appearing {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes fade-up-light {
		from {
			transform: translateY(20px);
			opacity: 0;
		}
		to {
			transform: translateY(0px);
			opacity: 1;
		}
	}
</style>
